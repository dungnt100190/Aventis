    <add name="szhm5200" connectionString="http://szhm5200/Kiss.Server.PSCD/"/>
    <add name="localhost" connectionString="http://localhost:88/Kiss.Server.PSCD/"/>
    <add name="CHBEHVS006" connectionString="http://chbehvs006:88/Kiss.Server.PSCD/"/>
