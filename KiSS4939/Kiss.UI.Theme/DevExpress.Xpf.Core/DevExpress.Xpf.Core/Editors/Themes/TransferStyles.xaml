<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:utils="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxec="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxet="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys" xmlns:dxep="http://schemas.devexpress.com/winfx/2008/xaml/editors" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

    <ResourceDictionary.MergedDictionaries>
        <dxdst:ResourceDictionaryEx Source="/DevExpress.Xpf.Themes.Kiss.v14.1;component/DevExpress.Xpf.Core/DevExpress.Xpf.Core/Themes/TransferControl.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{dxet:DateEditThemeKey ThemeName=Kiss, ResourceKey=CalendarTranserStyle}" TargetType="{x:Type dxec:DateEditCalendarTransferControl}" BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey ThemeName=Kiss, FullName=DevExpress.Xpf.Core.TransferControl}}">
        <Setter Property="PreviousControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type utils:TransferContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_ContentPresenter" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type utils:TransferContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_ContentPresenter" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="{dxet:DateEditThemeKey ThemeName=Kiss, ResourceKey=TransferControlFadeStyle}" TargetType="{x:Type utils:TransferControl}" BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey ThemeName=Kiss, FullName=DevExpress.Xpf.Core.TransferControl}}">
        <Setter Property="PreviousControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_PrevContentPresenter" HorizontalAlignment="Center">
                        <ContentPresenter.Triggers>
                            <EventTrigger RoutedEvent="utils:TransferControl.ContentChanged">
                                <BeginStoryboard>
                                    <Storyboard SpeedRatio="{Binding SpeedRatio, RelativeSource={RelativeSource TemplatedParent}}" FillBehavior="HoldEnd">
                                        <DoubleAnimation Storyboard.TargetName="PART_PrevContentPresenter" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.300" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ContentPresenter.Triggers>
                    </ContentPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ControlTemplate">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <ContentPresenter SnapsToDevicePixels="True" Name="PART_NextContentPresenter" HorizontalAlignment="Center">
                        <ContentPresenter.Triggers>
                            <EventTrigger RoutedEvent="utils:TransferControl.ContentChanged">
                                <BeginStoryboard>
                                    <Storyboard SpeedRatio="{Binding SpeedRatio, RelativeSource={RelativeSource TemplatedParent}}">
                                        <DoubleAnimation Storyboard.TargetName="PART_NextContentPresenter" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.300" FillBehavior="HoldEnd" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ContentPresenter.Triggers>
                    </ContentPresenter>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
