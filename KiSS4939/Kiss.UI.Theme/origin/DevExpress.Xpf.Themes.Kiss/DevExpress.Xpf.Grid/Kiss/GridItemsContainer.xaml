<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid" xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">

	<SolidColorBrush x:Key="OuterBorder1ColorBrush" Color="#FF668CC4" />
	<SolidColorBrush x:Key="OuterBorder2ColorBrush" Color="#FFC1C1C1" />
	
    <!--BEGIN WPF-->
    <DataTemplate x:Key="{dxgt:CardViewThemeKey ResourceKey=DataRowsTemplate}">
		<Border x:Name="innerBorder" Background="White">
			<dxg:CardViewDataRowsControl />
		</Border>
		<DataTemplate.Triggers>
			<DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Horizontal">
			</DataTrigger>
			<DataTrigger Binding="{Binding Path=(dxg:GridControl.ActiveView).Orientation, RelativeSource={RelativeSource TemplatedParent}}" Value="Vertical">
			</DataTrigger>
			<DataTrigger Binding="{Binding Path=GroupLevel}" Value="0" />
		</DataTemplate.Triggers>
	</DataTemplate>
	
	<DataTemplate x:Key="{dxgt:CardViewThemeKey ResourceKey=GroupRowsTemplate}">
		<Border Background="White">
			<dxg:CardViewGroupRowsControl />
		</Border>
	</DataTemplate>
    <!--END WPF-->
</ResourceDictionary>