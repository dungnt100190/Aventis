<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="http://schemas.devexpress.com/winfx/2008/xaml/docking" xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:collections="clr-namespace:System.Collections;assembly=mscorlib" xmlns:ve="http://schemas.devexpress.com/winfx/2008/xaml/docking/visualelements" xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/docking/themekeys" xmlns:dxp="http://schemas.devexpress.com/winfx/2008/xaml/docking/platform" xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">
    <dx:BoolToVisibilityInverseConverter x:Key="boolToVisibilityInverseConverter" />
    <dx:BoolToVisibilityConverter x:Key="boolToVisibilityConverter" />    
	<ControlTemplate x:Key="{dxt:SplitterControlElementsThemeKey ResourceKey=Template}">
		<Border x:Name="PART_Border" ve:DockPane.HitTestType="Bounds" Background="Transparent" Padding="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}" Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualMargin, RelativeSource={RelativeSource TemplatedParent}}" Visibility="{Binding Path=(local:DockLayoutManager.LayoutItem).Visibility, RelativeSource={RelativeSource TemplatedParent}}">
            <Border.Resources>
                <Color x:Key="GlyphNormalColor">#FF828790</Color>
                <Color x:Key="GlyphMouseOverColor">#FF353637</Color>
                <Color x:Key="GlyphBackgroundColor">#59FFFFFF</Color>
                <SolidColorBrush x:Key="GlyphBrush" x:Name="GlyphBrush" Color="{StaticResource GlyphNormalColor}" />
                <SolidColorBrush x:Key="GlyphBackgroundBrush" Color="{StaticResource GlyphBackgroundColor}" />
            </Border.Resources>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="MouseOver">
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetName="GlyphBrush" Storyboard.TargetProperty="Color" To="{StaticResource GlyphMouseOverColor}" Duration="0" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <ve:DropBoundsControl x:Name="Drop">
				<dx:Container Background="{TemplateBinding Background}" UseLayoutRounding="True">
					<dx:Container x:Name="PART_HorizontalRootElement" Width="16" Height="4">
						<Path Stretch="Fill" Fill="{StaticResource GlyphBrush}" Margin="1" Data="F1 M 558,364L 558,366L 556,366L 556,364L 558,364 Z M 554,364L 554,366L 552,366L 552,364L 554,364 Z M 550,364L 550,366L 548,366L 548,364L 550,364 Z M 546,364L 546,366L 544,366L 544,364L 546,364 Z " />
						<Path Stretch="Fill" Fill="{StaticResource GlyphBackgroundBrush}" Margin="2,2,0,0" Data="F1 M 559,365L 559,367L 557,367L 557,365L 559,365 Z M 555,365L 555,367L 553,367L 553,365L 555,365 Z M 551,365L 551,367L 549,367L 549,365L 551,365 Z M 547,365L 547,367L 545,367L 545,365L 547,365 Z " />
					</dx:Container>
					<dx:Container x:Name="PART_VerticalRootElement" Width="4" Height="16">
						<Path Stretch="Fill" Fill="{StaticResource GlyphBrush}" Margin="1" Data="F1 M 538,357L 540,357L 540,359L 538,359L 538,357 Z M 538,361L 540,361L 540,363L 538,363L 538,361 Z M 538,365L 540,365L 540,367L 538,367L 538,365 Z M 538,369L 540,369L 540,371L 538,371L 538,369 Z " />
						<Path Stretch="Fill" Fill="{StaticResource GlyphBackgroundBrush}" Margin="2,2,0,0" Data="F1 M 539,358L 541,358L 541,360L 539,360L 539,358 Z M 539,362L 541,362L 541,364L 539,364L 539,362 Z M 539,366L 541,366L 541,368L 539,368L 539,366 Z M 539,370L 541,370L 541,372L 539,372L 539,370 Z " />
					</dx:Container>
				</dx:Container>
			</ve:DropBoundsControl>
		</Border>
	</ControlTemplate>
	<ControlTemplate x:Key="{dxt:EmptySpaceControlElementsThemeKey ResourceKey=Template}">
		<Border x:Name="PART_Border" ve:DockPane.HitTestType="Bounds" Background="Transparent" Padding="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}" Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualMargin, RelativeSource={RelativeSource TemplatedParent}}" Visibility="{Binding Path=(local:DockLayoutManager.LayoutItem).Visibility, RelativeSource={RelativeSource TemplatedParent}}">
			<ve:DropBoundsControl>
				<Grid SnapsToDevicePixels="true">
				</Grid>
			</ve:DropBoundsControl>
		</Border>
	</ControlTemplate>
	<DataTemplate x:Key="{dxt:LabelControlElementsThemeKey ResourceKey=Caption}">
        <Border Background="Transparent" ve:DockPane.HitTestType="Header" DataContext="{Binding LayoutItem}">
            <ve:TemplatedCaptionControl LayoutItem="{Binding}" />
        </Border>
	</DataTemplate>
	<DataTemplate x:Key="{dxt:LabelControlElementsThemeKey ResourceKey=Content}">
        <Border ve:DockPane.HitTestType="Content" DataContext="{Binding LayoutItem}">
            <!--BEGIN WPF-->
            <ContentPresenter Content="{Binding Path=Content}" ContentTemplate="{Binding ContentTemplate}" ContentTemplateSelector="{Binding ContentTemplateSelector}" /><!--END WPF--><!--ONLY SL            
            <ContentPresenter Content="{Binding Path=Content}" 
                              ContentTemplate="{Binding ContentTemplate}" />ONLY SL-->
        </Border>
	</DataTemplate>
    <ControlTemplate x:Key="{dxt:LabelControlElementsThemeKey ResourceKey=Template}" TargetType="ve:psvHeaderedContentControl">
        <Border x:Name="PART_Border" ve:DockPane.HitTestType="Bounds" Background="Transparent" Padding="{Binding LayoutItem.ActualPadding, RelativeSource={RelativeSource TemplatedParent}}" Margin="{Binding LayoutItem.ActualMargin, RelativeSource={RelativeSource TemplatedParent}}" Visibility="{Binding LayoutItem.Visibility, RelativeSource={RelativeSource TemplatedParent}}">
            <ve:DropBoundsControl>
                <Grid SnapsToDevicePixels="true">
                    <ve:LabelControlCaptionPresenter x:Name="PART_Caption" Content="{TemplateBinding Header}" ContentTemplate="{TemplateBinding HeaderTemplate}" HorizontalAlignment="{Binding LayoutItem.CaptionHorizontalAlignment, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="{Binding LayoutItem.CaptionVerticalAlignment, RelativeSource={RelativeSource TemplatedParent}}" Visibility="{Binding LayoutItem.HasContent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityInverseConverter}}" />
                    <ve:LabelControlContentPresenter x:Name="PART_Content" Content="{TemplateBinding Content}" ContentTemplate="{TemplateBinding ContentTemplate}" Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}" HorizontalAlignment="{Binding LayoutItem.ContentHorizontalAlignment, RelativeSource={RelativeSource TemplatedParent}}" VerticalAlignment="{Binding LayoutItem.ContentVerticalAlignment, RelativeSource={RelativeSource TemplatedParent}}" Visibility="{Binding LayoutItem.HasContent, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource boolToVisibilityConverter}}" />
                </Grid>
            </ve:DropBoundsControl>
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="{dxt:SeparatorControlElementsThemeKey ResourceKey=Template}">
		<Border x:Name="PART_Border" ve:DockPane.HitTestType="Bounds" Background="Transparent" Padding="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualPadding, RelativeSource={RelativeSource TemplatedParent}}" Margin="{Binding Path=(local:DockLayoutManager.LayoutItem).ActualMargin, RelativeSource={RelativeSource TemplatedParent}}" Visibility="{Binding Path=(local:DockLayoutManager.LayoutItem).Visibility, RelativeSource={RelativeSource TemplatedParent}}">
			<ve:DropBoundsControl>
				<Grid SnapsToDevicePixels="true">
					<Grid Margin="2,4,2,4" Width="2" x:Name="PART_VerticalRootElement">
						<Rectangle Stretch="Fill" HorizontalAlignment="Left" Width="1" Fill="#FF6E6D8F" Margin="0,0,0,1" Opacity="0.5" />
						<Rectangle Stretch="Fill" HorizontalAlignment="Right" Width="1" Fill="#FFFFFFFF" Margin="0,1,0,0" />
					</Grid>
					<Grid Margin="4,2,4,2" Height="2" x:Name="PART_HorizontalRootElement">
						<Rectangle Stretch="Fill" VerticalAlignment="Top" Height="1" Fill="#FF6E6D8F" Margin="0,0,1,0" Opacity="0.5" />
						<Rectangle Stretch="Fill" VerticalAlignment="Bottom" Height="1" Fill="#FFFFFFFF" Margin="1,0,0,0" />
					</Grid>
				</Grid>
			</ve:DropBoundsControl>
		</Border>
	</ControlTemplate>
</ResourceDictionary>