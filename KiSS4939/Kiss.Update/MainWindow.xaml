<Window x:Class="Kiss.Update.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Update="clr-namespace:Kiss.Update"
        Title="KiSS Update"
        Height="131"
        Width="300"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Loaded="Window_Loaded"
        Topmost="True"
        SizeToContent="Height">
    
    <Window.DataContext>
        <Update:MainViewModel/>
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="6"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="KiSS wird aktualisiert. Bitte warten..." TextAlignment="Center"/>
        <ProgressBar Grid.Row="2" Height="20" Minimum="0" Maximum="100" Value="{Binding Progress}"/>
        <Button Grid.Row="4" Content="Abbrechen" IsEnabled="{Binding Path=IsCancelButtonEnabled}" Click="Button_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
