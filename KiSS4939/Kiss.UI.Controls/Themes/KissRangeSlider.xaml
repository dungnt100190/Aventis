<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:Kiss.UI.Controls">
    <Style TargetType="{x:Type Controls:KissRangeSlider}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:KissRangeSlider}">
                    <StackPanel x:Name="PART_Container" Orientation="Horizontal">
                        <Canvas x:Name="PART_LeftPanel" Background="Transparent"/>
                        <Thumb x:Name="PART_LeftThumb" Cursor="SizeWE"/>
                        <Thumb x:Name="PART_MiddleThumb" Cursor="ScrollWE" MinWidth="10"/>
                        <Thumb x:Name="PART_RightThumb" Cursor="SizeWE"/>
                        <Canvas x:Name="PART_RightPanel" Background="Transparent"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>