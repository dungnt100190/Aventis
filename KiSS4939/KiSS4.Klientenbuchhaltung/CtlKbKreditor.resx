  <data name="qryKreditor.SelectStatement" xml:space="preserve">
    <value>DECLARE @BaPersonID INT
SET @BaPersonID = NULL
--- SET @BaPersonID = {edtSearchBaPersonID}

DECLARE @BaInstitutionID INT
SET @BaInstitutionID = NULL
--- SET @BaInstitutionID = {edtSearchBaInstitutionID}

SELECT Typ, ID, BaPersonID, BaInstitutionID, Name, Zusatz, Strasse, PLZ, Ort, Kanton 
FROM (
SELECT Typ        = 'Person',
       ID = BaPersonID,
       BaPersonID = BaPersonID,
       BaInstitutionID = NULL,
       Name    = PRS.NameVorname,
       Zusatz  = PRS.WohnsitzAdressZusatz,
       Strasse = PRS.WohnsitzStrasseHausNr,
       PLZ     = PRS.WohnsitzPLZ,
       Ort     = PRS.WohnsitzOrt,
       Kanton  = WohnsitzKanton
FROM vwPerson PRS
WHERE 1 = 1
--- AND PRS.NameVorname LIKE dbo.fnReplaceWildcard({edtSearchName})
--- AND PRS.WohnsitzStrasseHausNr LIKE dbo.fnReplaceWildcard({edtSearchStrasse})
--- AND PRS.WohnsitzPLZ LIKE dbo.fnReplaceWildcard({edtSearchPLZOrt})
--- AND PRS.WohnsitzOrt LIKE dbo.fnReplaceWildcard({edtSearchPLZOrt})
--- AND {edtSearchPerson} = 1
  AND ((@BaPersonID IS NULL AND @BaInstitutionID IS NULL)
    OR (@BaPersonID IS NOT NULL AND PRS.BaPersonID = @BaPersonID))
UNION ALL 
SELECT Typ        = dbo.fnGetLOVMLText('BaInstitutionArt', INS.BaInstitutionArtCode, 1),
       ID         = INS.BaInstitutionID,
       BaPersonID = NULL,
       BaInstitutionID = INS.BaInstitutionID,
       Name    = CASE
                   WHEN INS.BaInstitutionArtCode = 2 THEN INS.Name + ISNULL(', ' + INS.Vorname, '')
                   ELSE INS.Name
                 END,
       Zusatz  = ADR.Zusatz,
       Strasse = IsNull(ADR.Strasse,'') + IsNull(' ' + ADR.HausNr,''),
       PLZ     = ADR.PLZ,
       Ort     = ADR.Ort,
       Kanton  = ADR.Kanton
FROM BaInstitution     INS
  INNER JOIN BaAdresse ADR ON ADR.BaInstitutionID = INS.BaInstitutionID and
                                      --ADR.AdresseCode = 1 and -- Wohnsitz
                                      getdate() between isNull(ADR.DatumVon,getdate()) and isNull(ADR.DatumBis,getdate())
WHERE 1 = 1
--- AND INS.Name LIKE dbo.fnReplaceWildcard({edtSearchName})
--- AND {edtSearchInstitution} = 1
  AND ((@BaPersonID IS NULL AND @BaInstitutionID IS NULL)
    OR (@BaInstitutionID IS NOT NULL AND INS.BaInstitutionID = @BaInstitutionID))
---------TODO edtSearchAktiv und für institution weitere
) TMP
ORDER BY Name, Ort</value>
